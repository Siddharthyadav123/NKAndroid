<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp">

        <TextView
            android:id="@+id/lblNoOfKoinTransferedReceived"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="No. of Koin Transferred:"
            android:textColor="@color/gray"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/textKoinCount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@+id/lblNoOfKoinTransferedReceived"
            android:text="0"
            android:textColor="@color/black"
            android:textSize="16dp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_marginTop="2dp"
                android:src="@drawable/clock_gray" />

            <TextView
                android:id="@+id/activityTimeTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="1dp"
                android:text="1 hour ago"
                android:textColor="@color/gray"
                android:textSize="14dp" />

        </LinearLayout>

        <TextView
            android:id="@+id/lblEmailToFrom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/lblNoOfKoinTransferedReceived"
            android:layout_marginTop="6dp"
            android:text="Transferred To:"
            android:textColor="@color/gray"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/textEmailToFrom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/lblNoOfKoinTransferedReceived"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:layout_toRightOf="@+id/lblEmailToFrom"
            android:text="email"
            android:textColor="@color/black"
            android:textSize="16dp" />


        <TextView
            android:id="@+id/lblMessage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/lblEmailToFrom"
            android:layout_marginTop="10dp"
            android:text="Message:"
            android:textColor="@color/gray"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/textMessage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/lblMessage"
            android:layout_marginTop="2dp"
            android:text="Message"
            android:textColor="@color/black"
            android:textSize="16dp" />


    </RelativeLayout>

</RelativeLayout>